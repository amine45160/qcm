.cb-slideshow body {
    font-size: 25px;
}

.cb-slideshow:after {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    left: 0px;
    z-index: 0;
}

.cb-slideshow:after {
    content: '';
    background: transparent url(../images/pattern.png) repeat top left;
}

.cb-slideshow li div h3 {
    font-family: 'BebasNeueRegular', 'Arial Narrow', Arial, sans-serif;
    font-size: 80px;
    padding: 0 30px;
    line-height: 120px;
    color: rgba(255, 255, 255, 0.8);
}

.cb-slideshow input {
    border: 1px solid #B0B0B2;
    padding: 5px 30px 7px;
    color: #666262;
    width: 203px;
}

.cb-slideshow li div h2 {
    font-family: 'BebasNeueRegular', 'Arial Narrow', Arial, sans-serif;
    font-size: 30px;
    padding: 0 30px;
    line-height: 60px;
    color: rgba(233, 233, 233, 0.80);
}

/**----------------------Parametres d'animation Background---------------------------**/

.cb-slideshow li span {
    background-image: url(../images/6.jpg);
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0px;
    left: 0px;
    background-size: cover;
    background-position: 50% 50%;
    background-repeat: none;
    opacity: 1;
    z-index: 0;
    -webkit-backface-visibility: hidden;
    -webkit-animation: imageAnimation 20s; /**The Question time + 10s **/
    -moz-animation: imageAnimation 20s;
    -o-animation: imageAnimation 20s;
    -ms-animation: imageAnimation 20s;
    animation: imageAnimation 20s;
    animation: imageAnimation 20s;
}

@-webkit-keyframes imageAnimation {
    0% {
        opacity: 0;
    }
    8% {
        opacity: 1;
        -webkit-transform: scale(1.05);
    }
    50% {
        opacity: 1;
        -webkit-transform: scale(1.1);
    }

}

@-moz-keyframes imageAnimation {
    0% {
        opacity: 0;
    }
    8% {
        opacity: 1;
        -moz-transform: scale(1.05);
    }
    100% {
        opacity: 1;
        -moz-transform: scale(1.1);
    }

}

@-o-keyframes imageAnimation {
    0% {
        opacity: 0;
    }
    8% {
        opacity: 1;
        -o-transform: scale(1.05);
    }
    17% {
        opacity: 1;
        -o-transform: scale(1.1);
    }

}

@-ms-keyframes imageAnimation {
    0% {
        opacity: 0;
    }
    8% {
        opacity: 1;
        -ms-transform: scale(1.05);
    }
    17% {
        opacity: 1;
        -ms-transform: scale(1.1);
    }
}

@keyframes imageAnimation {
    0% {
        opacity: 0;
    }
    8% {
        opacity: 1;
        transform: scale(1.05);
    }
    17% {
        opacity: 1;
        transform: scale(1.1);
    }
}

/**----------------------Parametres d'animation Title---------------------------**/
.cb-slideshow li div {
    z-index: 1000;
    position: absolute;
    bottom: 105px;
    left: -151px;
    width: 100%;
    text-align: center;
    opacity: 1;
    -webkit-animation: titleAnimation 20s;
    -moz-animation: titleAnimation 20s;
    -o-animation: titleAnimation 20s;
    -ms-animation: titleAnimation 20s;
    animation: titleAnimation 20s;
}

@-webkit-keyframes titleAnimation {
    0% {
        opacity: 0;
        -webkit-transform: translateY(-300%);
    }
    8% {
        opacity: 1;
        -webkit-transform: translateY(0%);
    }
    50% {
        opacity: 1;
        -webkit-transform: translateY(0%);
    }
}

@-moz-keyframes titleAnimation {
    0% {
        opacity: 0;
        -moz-transform: translateY(-300%);
    }
    8% {
        opacity: 1;
        -moz-transform: translateY(0%);
    }
    50% {
        opacity: 1;
        -moz-transform: translateY(0%);

    }

}

@-o-keyframes titleAnimation {
    0% {
        opacity: 0;
        -o-transform: translateY(-300%);
    }
    8% {
        opacity: 1;
        -o-transform: translateY(0%);
    }
    50% {
        opacity: 1;
        -o-transform: translateY(0%);

    }

}

@-ms-keyframes titleAnimation {
    0% {
        opacity: 0;
        -ms-transform: translateY(-300%);
    }
    8% {
        opacity: 1;
        -ms-transform: translateY(0%);
    }
    50% {
        opacity: 1;
        -ms-transform: translateY(0%);

    }

}

@keyframes titleAnimation {
    0% {
        opacity: 0;
        transform: translateY(-300%);
    }
    8% {
        opacity: 1;
        transform: translateY(0%);
    }
    50% {
        opacity: 1;
        transform: translateY(0%);

    }

}

/**------------------------------Au cas o√π le navigateur ne supporte pas l'animation---------------------------------*/
.no-cssanimations .cb-slideshow li span {
    opacity: 1;
}

@media screen and (max-width: 1140px) {
    .cb-slideshow li div h3 {
        font-size: 100px
    }
}

@media screen and (max-width: 600px) {
    .cb-slideshow li div h3 {
        font-size: 50px
    }
}

