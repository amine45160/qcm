package modele_local;

import views.ChronometrePanel;
import views.ChronometrePanelInterface;

/**
 * Created by amineboufatah on 29/11/14.
 */

public interface ChronometreInterface {
    /**
     * This method will initialise the ChronometreModele
     */
    void initialiseChronometre();

    /**
     * This method Allows us to start the Chronometre ( Timer )
     */
    void startChronometre();

    /**
     * Setter for time value
     * @param time
     */
    void setTime(int time);

    /**
     * This method returns the Panel
     * @return ChronometrePanel
     */
    ChronometrePanel getChronometrePanel();

    /**
     * This method allows us to stop the Chronometre ( Timer )
     */
    void stopChronometre();

    /**
     * This method returns the Interface Panel for Chronometre
     * @return ChronometrePanelInterface
     */
    public ChronometrePanelInterface getChronometrePanelInterface();
}
